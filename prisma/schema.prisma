// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role{
  student
  staff
}

enum QuestionType{
  aptitude
  logical_reason
  verbal_ability
}


model User{
  id String @id @default(cuid())
  name String
  email String @unique
  image String?
  institution String?
  batch String?
  dept String?
  role Role?
}

model Questions{
  id String @id @default(cuid())
  question String
  opt1 String?
  opt2 String?
  opt3 String?
  opt4 String?
  ans Int
  topic String?
  type QuestionType
}